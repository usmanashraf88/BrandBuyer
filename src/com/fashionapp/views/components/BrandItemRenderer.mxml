<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   width="100%"
				   height="100%"
				   color="{currentState == 'selected'?0xffffff:0x000000}"
				   autoDrawBackground="false">
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected"/>
	</s:states>
	<s:Group height="100%" width="100%">
		<s:Rect height="100%" width="100%">
			<s:fill>
				<s:SolidColor color="{currentState == 'selected'?0x000000:0xffffff}"/>
			</s:fill>
		</s:Rect>
	</s:Group>
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout gap="0"/>
		</s:layout>
		<s:Group width="100%" height="100%">			
			<s:layout>
				<s:VerticalLayout paddingLeft="15" paddingRight="15" paddingTop="15" paddingBottom="15"/>
			</s:layout>
			<s:Label x="12" y="32" text="BRAND TITLE"
					 fontWeight="normal"/>
			<s:Group width="100%">
				<s:Label text="Season | Dept" fontSize="10"/>
				<s:Label text="(30)" right="5" fontSize="10"/>
			</s:Group>
			<s:Label text="Date" fontSize="10"/>
		</s:Group>
		<s:BorderContainer width="100%" height="1" borderVisible="false" backgroundColor="0x000000"/>
	</s:Group>
</s:ItemRenderer>
