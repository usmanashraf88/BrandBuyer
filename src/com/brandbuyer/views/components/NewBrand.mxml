<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   title="CREATE NEW BRAND" width="100%" height="100%" 
			   skinClass="assets.images.CustomViewWithBackButtonSkin"
			   actionBarVisible="false"
			   creationComplete="view1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			
			protected function view1_creationCompleteHandler(event:FlexEvent):void
			{
				this.addEventListener('backClicked',onBackClickHnd);				
			}
			
			private function onBackClickHnd(event:Event):void {
				this.navigator.popView();
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout gap="10" horizontalAlign="center" verticalAlign="middle"
						  paddingLeft="15" paddingRight="15"/>
	</s:layout>
	<s:Label text="Brand" fontSize="11"/>
	<s:TextInput skinClass="com.brandbuyer.skins.LoginTextInputSkin" width="100%"/>
	<s:Label text="Session" fontSize="11"/>
	<s:TextInput skinClass="com.brandbuyer.skins.LoginTextInputSkin" width="100%"/>
	<s:Label text="Dept" fontSize="11"/>
	<s:TextInput skinClass="com.brandbuyer.skins.LoginTextInputSkin" width="100%"/>
	<s:Spacer height="20"/>
	<s:Button width="100%" label="Create" 
			  horizontalCenter="0"
			  height="40"
			  skinClass="com.brandbuyer.skins.LoginButtonSkin"/>
</s:View>
