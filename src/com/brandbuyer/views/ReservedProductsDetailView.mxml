<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark"
		actionBarVisible="false"
		title="Reserved Products"
		skinClass="assets.images.CustomViewWithBackButtonSkin" xmlns:skins="com.brandbuyer.skins.*"
		creationComplete="view1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import mx.events.FlexEvent;
			
			
			protected function view1_creationCompleteHandler(event:FlexEvent):void
			{
				this.addEventListener("backClicked",onBackClick);
			}
			
			private function onBackClick(event:Event):void {
				this.navigator.popView();
			}
			
		]]>
	</fx:Script>
	<!--<s:TextInput prompt="Search" width="100%"/>-->
	<s:Group height="100%" width="100%">
		<s:layout>
			<s:VerticalLayout gap="0"/>
		</s:layout>
		<skins:SearchOpenerSkin height="50" width="100%" click="{list_searchOptions.visible = !list_searchOptions.visible}"/>
		<s:Group width="100%">
			<s:HGroup width="100%" paddingRight="15"
					  verticalAlign="middle"
					  paddingLeft="15">
				<s:Image height="60" width="60"/>
				<s:VGroup width="100%" gap="2">
					<s:Label text="Brand" 
							 fontSize="14" fontWeight="bold"
							 paddingTop="20" width="100%"/>
					<s:HGroup width="100%" gap="2">
						<s:Label text="Session" 
								 fontSize="14" fontWeight="bold"
								 />
						<s:Label text="{'| '+'Dept'}" fontWeight="bold"
								 fontSize="14"
								 />
					</s:HGroup>
					<s:Label text="Product Name 01" 
							 fontSize="14" fontWeight="bold"
							 width="100%"/>
					<s:Label text="Total Reserved Quantity" 
							 fontSize="12"
							 paddingTop="20" paddingBottom="5" width="100%"/>
					<s:Label text="PO Quantity" 
							 fontSize="12"
							 paddingBottom="0" width="100%"/>
				</s:VGroup>
			</s:HGroup>	
			<s:Group width="100%" id="list_searchOptions" visible="false"
					 height="100">
				<s:List skinClass="com.brandbuyer.skins.MenuListSkin" width="100%"
						selectedIndex="0"
						height="100">
					<s:dataProvider>
						<s:ArrayList>
							<fx:String>BY VIP</fx:String>
							<fx:String>BY ITEM</fx:String>
						</s:ArrayList>
					</s:dataProvider>
				</s:List>	
			</s:Group>
		</s:Group>
		<s:Group height="100%" width="100%">
			<s:List id="menuList"  width="100%" height="100%"
					itemRenderer="com.brandbuyer.renderers.ReservedListDetailItemRenderer">
				<s:dataProvider>
					<s:ArrayCollection>
						<fx:Object brand="Brand" session="Session" dept="Dept" productName="Product Name 01" desc="Total Reserved Quantity" title="PO Quantity"/>
						<fx:Object brand="Brand" session="Session" dept="Dept" productName="Product Name 01" desc="Total Reserved Quantity" title="PO Quantity"/>
						<fx:Object brand="Brand" session="Session" dept="Dept" productName="Product Name 01" desc="Total Reserved Quantity" title="PO Quantity"/>
						<fx:Object brand="Brand" session="Session" dept="Dept" productName="Product Name 01" desc="Total Reserved Quantity" title="PO Quantity"/>
						<fx:Object brand="Brand" session="Session" dept="Dept" productName="Product Name 01" desc="Total Reserved Quantity" title="PO Quantity"/>
						<fx:Object brand="Brand" session="Session" dept="Dept" productName="Product Name 01" desc="Total Reserved Quantity" title="PO Quantity"/>
					</s:ArrayCollection>
				</s:dataProvider>
			</s:List>	
			<s:BorderContainer width="100%" height="100%" 
							   visible="{list_searchOptions.visible}"
							   backgroundColor="0x000000" backgroundAlpha="0.6"/>
		</s:Group>
	</s:Group>
</s:View>
